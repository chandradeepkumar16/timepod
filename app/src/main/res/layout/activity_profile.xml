<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/black"
    >


    <ImageView
        android:id="@+id/profilebg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:srcCompat="@drawable/profile_bg" />

    <ImageView
        android:id="@+id/profileheading"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/profilebg"
        android:layout_alignLeft="@+id/profilebg"
        android:layout_alignTop="@+id/profilebg"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/profilehead" />

    <TextView
        android:id="@+id/settingstext"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profilebg"
        android:layout_alignLeft="@+id/profilebg"
        android:layout_alignTop="@+id/profilebg"
        android:layout_alignEnd="@+id/profilebg"
        android:layout_alignRight="@+id/profilebg"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:text="Settings"
        android:textColor="@color/white" />


</RelativeLayout>